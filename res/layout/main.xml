<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg"
    >
    <TextView
        android:id="@+id/displayDigits"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="right" android:textSize="35dp"/>
    
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            
            >
			
            <Button
                android:id="@+id/button1"
                                
                style="@style/buttonText"
                android:background="@drawable/btnblack"
               android:layout_margin="3dp"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:padding="20dp"
                android:text="1" 
                android:textSize="25dp" 
                android:textStyle="bold" 
                android:typeface="normal"/>

            <Button
                android:id="@+id/button2"
                
                style="@style/buttonText"
                android:background="@drawable/btnblack"
               android:layout_margin="3dp"
               android:layout_width="65dp"
                android:layout_height="65dp"
                android:padding="20dp"
                android:text="2" android:textSize="25dp" android:textStyle="bold"/>

            <Button
                android:id="@+id/button3"
                style="@style/buttonText"
                android:background="@drawable/btnblack"
               android:layout_width="65dp"
                android:layout_height="65dp"
                android:padding="20dp"
                android:layout_margin="3dp"
                android:text="3" android:textSize="25dp" android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonplus"
                style="@style/buttonText"
                android:background="@drawable/btn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:padding="20dp"
                android:layout_margin="3dp"
                android:text=" + " android:textSize="25dp" android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:padding="0dp">

            <Button
                android:id="@+id/button4"
                style="@style/buttonText"
                android:background="@drawable/btnblack"
               android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:text="4" android:textSize="25dp" android:textStyle="bold"/>

            <Button
                android:id="@+id/button5"
                style="@style/buttonText"
                android:background="@drawable/btnblack"
               android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:text="5" android:textSize="25dp" android:textStyle="bold"/>

            <Button
                android:id="@+id/button6"
                style="@style/buttonText"
                android:background="@drawable/btnblack"
               android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:text="6" android:textSize="25dp" android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonminus"
                style="@style/buttonText"
                android:background="@drawable/btn"
                
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:text=" - " android:textSize="25dp" android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <Button
                android:id="@+id/button7"
                style="@style/buttonText"
                android:background="@drawable/btnblack"
               android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:text="7" android:textSize="25dp" android:textStyle="bold"/>

            <Button
                android:id="@+id/button8"
                style="@style/buttonText"
                android:background="@drawable/btnblack"
               android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:text=" 8 " android:textSize="25dp" android:textStyle="bold"/>

            <Button
                android:id="@+id/button9"
                style="@style/buttonText"
                android:background="@drawable/btnblack"
               android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:text=" 9 " android:textSize="25dp" android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonmultiply"
                style="@style/buttonText"
                android:background="@drawable/btn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:text=" * " android:textSize="25dp" android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:padding="0dp">

            <Button
                android:id="@+id/buttonClear"
                
                style="@style/buttonText"
                android:background="@drawable/btnyellow"
               android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:text=" C " android:textSize="25dp" android:textStyle="bold"
                
                />

            <Button
                android:id="@+id/buttonZero"
                style="@style/buttonText"
                android:background="@drawable/btnblack"
               android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:text="0" android:textSize="25dp" android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonDecimal"
                style="@style/buttonText"
                android:background="@drawable/btn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:text=" . " android:textSize="25dp" android:textStyle="bold"/>

            <Button
                android:id="@+id/buttondivide"
                style="@style/buttonText"
                android:background="@drawable/btn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:text=" / " android:textSize="25dp" android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <Button
                android:id="@+id/buttonAc"
                style="@style/buttonText"
                android:background="@drawable/btnyellow"
               android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:text="AC" android:textSize="20dp" android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonABS"
                android:layout_width="65dp"
                style="@style/buttonText"
                android:background="@drawable/btnyellow"
               android:layout_height="65dp"
               android:layout_margin="3dp"
                android:text="ABS" android:textSize="20dp" android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonOFF"
                style="@style/buttonText"
                android:background="@drawable/btnred"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:text="OFF" android:textSize="20dp" android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonequal"
                style="@style/buttonText"
                android:background="@drawable/btngreen"
               android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:text=" = " android:textSize="25dp" android:textStyle="bold"/>
        </TableRow>
    </TableLayout>

</LinearLayout>